                                <li class="row row-noti">
                                    <div class="col-3 col-md-3 col-sm-3 col-xs-3">
                                        <div class="notify-img"><img src="@Url.Content("~/UploadedFiles/Avatar/sample_avatar.png")" alt=""></div>
                                    </div>
