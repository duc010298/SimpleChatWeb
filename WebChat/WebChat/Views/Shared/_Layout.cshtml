@{
    var avatar = "sample_avatar.png";
    if (@ViewBag.Avatar != null) {
        avatar = @ViewBag.Avatar;
    }
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/header.css")">
    @if (@ViewBag.View == "index")
    {
        <link rel="stylesheet" href="@Url.Content("~/Content/index.css")">
    }
    else if (@ViewBag.View == "friend")
    {
        <link rel="stylesheet" href="@Url.Content("~/Content/friend.css")">
    }
    else if (ViewBag.View == "info")
    {
        <link rel="stylesheet" href="@Url.Content("~/Content/info.css")">
    }
    <title>@ViewBag.Title</title>
</head>

