                            </ul>
                            <div class="noti-footer">
                                <b>Xem tất cả thông báo</b>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle header-avatar" href="#" data-toggle="dropdown">
                            <img src="@Url.Content("~/UploadedFiles/Avatar/" + avatar)" alt="">
                            @ViewBag.Fullname
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="@Url.Action("Info", "User")"><i class="fas fa-user-circle"></i> Thông tin tài khoản</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("ListFriend", "Friend")"><i class="fas fa-user-friends"></i> Bạn bè</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Authentication")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
