                </ul>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    @if (@ViewBag.View == "index")
    {
        <script src="@Url.Content("~/Scripts/moment.js")"></script>
        <script src="@Url.Content("~/Scripts/main.js")"></script>
    }
    else if (@ViewBag.View == "friend")
    {
        <script src="@Url.Content("~/Scripts/friend.js")"></script>
    }
    else if (ViewBag.View == "info")
    {
        <script src="@Url.Content("~/Scripts/moment.js")"></script>
        <script src="@Url.Content("~/Scripts/info.js")"></script>
    }
</body>

</html>